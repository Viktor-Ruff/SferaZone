<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".view.screens.PeopleScreenFragment">


    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_people"
        style="@style/Widget.MaterialComponents.Toolbar.Primary"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="#17FFFFFF"
        android:elevation="0dp"
        app:menu="@menu/menu_people_app_bar"
        app:titleTextAppearance="@style/TextIDStyle"
        app:titleTextColor="@color/main_color" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#17FFFFFF"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        app:tabIndicatorColor="@color/second_color"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/second_color"
        app:tabTextColor="@color/main_color1">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/subscribers" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/subscriptions" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/mutually" />


    </com.google.android.material.tabs.TabLayout>


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>